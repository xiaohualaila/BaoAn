<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/num_tv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/shape_calendar"
        android:text="1"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="10月24日"
        android:layout_toRightOf="@id/num_tv"
        android:layout_alignTop="@id/num_tv"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/work_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_tv"
        android:layout_alignLeft="@id/time_tv"
        android:textSize="12sp"
        android:text="上班时间 18:00"
        android:textColor="@color/black"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/work_time_tv"
        android:layout_alignLeft="@id/work_time_tv"
        android:drawableLeft="@mipmap/address_icon"
        android:text="浙江省杭州市拱墅区"
        android:textSize="12sp"
        android:layout_marginRight="25dp"
        android:drawablePadding="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/address_tv"
        android:layout_alignLeft="@id/address_tv"
        android:text="正常"
        android:textColor="#2195F2"
        android:layout_marginTop="20dp"
        />




    <View
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:background="@color/line_view"
        android:layout_below="@id/num_tv"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="18dp"/>

</RelativeLayout>