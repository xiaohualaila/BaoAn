<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.hz.junxinbaoan.activity.approval.ActivityApprovalCommit">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/title_lay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="true"
            android:background="@mipmap/app_bar_bg"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical">

            <FrameLayout
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/back" />
            </FrameLayout>

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="修改个人信息"
                android:textColor="@color/white"
                android:textSize="19.5dp"
                android:layout_toRightOf="@id/back"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/pic_head_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/pic_head"
                />

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="30dp">

                <ImageView
                    android:id="@+id/pic_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/pick_phone"
                    android:paddingBottom="6.7dp"
                    android:paddingLeft="4.2dp"
                    android:paddingRight="4.2dp"
                    android:paddingTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@color/picback"
                    />

                <TextView
                    android:id="@+id/firstname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="姓"
                    android:textColor="@color/white"
                    android:textSize="50dp"

                    />
            </FrameLayout>

            <ImageView
                android:id="@+id/change_pic"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/pick_phone"
                android:scaleType="fitXY"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_mine"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:id="@+id/mine_icon"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginRight="40dp"
                android:maxLength="10"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:layout_height="wrap_content"
                android:hint="请输入姓名"
                android:layout_toRightOf="@id/mine_icon"
                android:id="@+id/mine_et"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/hint_gray"
                android:textSize="15dp"
                android:drawablePadding="6dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="3dp"
                android:singleLine="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:layout_below="@id/mine_et"
                android:layout_marginRight="40dp"
                android:layout_alignLeft="@+id/mine_et"
                android:layout_alignStart="@+id/mine_et"
                android:layout_marginTop="2dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:visibility="gone"
            android:layout_marginBottom="6dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/id_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:id="@+id/id_icon"
                />
            <EditText
                android:layout_width="match_parent"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:layout_height="wrap_content"
                android:hint="请输入身份证号码"
                android:digits="@string/phone"
                android:id="@+id/id_et"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/hint_gray"
                android:textSize="15dp"
                android:drawablePadding="6dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:layout_alignBottom="@+id/id_icon"
                android:layout_toRightOf="@+id/id_icon"
                android:layout_toEndOf="@+id/id_icon"
                android:layout_marginStart="16dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:layout_below="@id/id_et"
                android:layout_marginRight="40dp"
                android:layout_alignLeft="@+id/id_et"
                android:layout_alignStart="@+id/id_et"
                android:layout_marginTop="2dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:visibility="gone"
            android:layout_marginBottom="6dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/id_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:id="@+id/workid_icon"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginRight="40dp"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:layout_height="wrap_content"
                android:hint="请输入保安证号"
                android:layout_toRightOf="@id/workid_icon"
                android:id="@+id/workid_et"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/hint_gray"
                android:textSize="15dp"
                android:drawablePadding="6dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="3dp"
                android:singleLine="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:layout_below="@id/workid_et"
                android:layout_marginRight="40dp"
                android:layout_alignLeft="@+id/workid_et"
                android:layout_alignStart="@+id/workid_et"
                android:layout_marginTop="2dp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:layout_marginBottom="6dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:id="@+id/oldhome_icon"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:layout_marginBottom="12dp"
                android:hint="请输入户籍所在地"
                android:text=""
                android:layout_toRightOf="@id/oldhome_icon"
                android:id="@+id/oldhome_et"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/hint_gray"
                android:textSize="15dp"
                android:drawablePadding="6dp"
                android:paddingRight="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/oldhome_et"
                android:layout_alignStart="@+id/oldhome_et"
                android:layout_marginRight="40dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:layout_marginBottom="6dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:id="@+id/home_icon"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:layout_marginBottom="12dp"
                android:hint="请输入现居地"
                android:text=""
                android:layout_toRightOf="@id/home_icon"
                android:id="@+id/home_et"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/hint_gray"
                android:textSize="15dp"
                android:drawablePadding="6dp"
                android:paddingRight="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/home_et"
                android:layout_alignStart="@+id/home_et"
                android:layout_marginRight="40dp"
                 />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_phone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:id="@+id/phone_icon"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginRight="40dp"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:layout_height="wrap_content"
                android:hint="请输入电话号码"
                android:digits="@string/phone"
                android:layout_toRightOf="@id/phone_icon"
                android:id="@+id/phone_et"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/hint_gray"
                android:textSize="15dp"
                android:drawablePadding="6dp"
                android:singleLine="true"
                android:paddingRight="10dp"
                android:layout_marginBottom="3dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:layout_below="@id/phone_et"
                android:layout_marginRight="40dp"
                android:layout_alignLeft="@+id/phone_et"
                android:layout_alignStart="@+id/phone_et"
                android:layout_marginTop="2dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_checkcode"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:id="@+id/vcode_icon"
                />
            <EditText
                android:singleLine="true"
                android:layout_width="150dp"
                android:layout_marginRight="40dp"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:layout_height="wrap_content"
                android:hint="验证码"
                android:layout_toRightOf="@id/vcode_icon"
                android:id="@+id/vcode_et"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/hint_gray"
                android:textSize="15dp"
                android:drawablePadding="6dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="3dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:layout_below="@id/vcode_et"
                android:layout_marginRight="40dp"
                android:layout_alignLeft="@+id/vcode_et"
                android:layout_alignStart="@+id/vcode_et"
                android:layout_marginTop="2dp"
                android:id="@+id/view" />
            <TextView
                android:id="@+id/sendCheckcode"
                android:layout_width="80dp"
                android:layout_height="43dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:text="获取验证码"
                android:textColor="@color/text_blue"
                android:layout_alignEnd="@+id/view"
                android:layout_alignRight="@+id/view" />
        </RelativeLayout>


        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@mipmap/btn"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            >
            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/commit_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="@color/white"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                app:gTouchEffect="ripple"
                app:gTouchColor="@color/colorRipple"
                />
        </FrameLayout>
    </LinearLayout>

</ScrollView>
