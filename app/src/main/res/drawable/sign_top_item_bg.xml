<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- This is the main color -->
    <item>
        <shape>
            <!--    边框颜色 -->
            <solid android:color="#E5E5E5"/>
        </shape>
    </item>
    <!-- 给View的左  右设置0.5dp的边框 -->
    <item android:left="0.5dp" android:right="0.5dp" >
        <shape>
            <!--     View填充颜色 -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>